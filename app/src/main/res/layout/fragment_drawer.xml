<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.main.drawer.DrawerFragment">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/avatarCiv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:siBorderWidth="3dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:src="@mipmap/ic_launcher"
        app:siBorderColor="@color/colorSecondary"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/camerafab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/logoutTv"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="55dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:text="Nombre"
        android:id="@+id/nickTv"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:textColor="@color/colorSecondary"
        android:layout_below="@id/avatarCiv"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="1dp"
        android:layout_below="@id/nickTv"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:background="@android:color/white"/>

    <TextView
        android:id="@+id/logoutTv"
        android:textColor="@color/colorSecondary"
        android:padding="8dp"
        android:text="Cerrar SesiÃ³n"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"/>


</RelativeLayout>